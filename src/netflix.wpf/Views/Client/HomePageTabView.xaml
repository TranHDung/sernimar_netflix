    d:DataContext="{d:DesignInstance Type=local:HomePageTabViewModel}"
    mc:Ignorable="d">
    <ScrollViewer Background="Transparent" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel>
                <Grid
                    Name="BackgroundVideoContainer"
                    Height="600"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="600" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.Background>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Grid Background="Black">
                                    <MediaElement
                                        Name="FeatVideo"
                                        LoadedBehavior="Manual"
                                        Opacity=".8"
                                        Source="{Binding ThemeVideo.FilePath}" />
                                </Grid>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Grid.Background>
                    <StackPanel Grid.Column="0" VerticalAlignment="Stretch">
                        <StackPanel.Background>
                            <LinearGradientBrush Opacity="0.8" StartPoint="0.5, 0.5" EndPoint="1,.5">
                                <GradientStop Offset="0" Color="Black" />
                                <GradientStop Offset="1" Color="Transparent" />
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <TextBlock
                            Margin="20"
                            FontSize="30"
                            Foreground="White"
                            Text="{Binding ThemeVideo.Name}" />
                        <TextBlock
                            Width="200"
                            Margin="20,0"
                            HorizontalAlignment="Left"
                            FontSize="14"
                            Foreground="White">
                            ⭐ Phim đề xuất
                        </TextBlock>
                        <WrapPanel>
                            <TextBlock
                                Width="80"
                                Margin="20,20"
                                HorizontalAlignment="Left"
                                FontSize="18"
                                Foreground="White"
                                Text="Đánh giá:" />
                            <TextBlock
                                Width="200"
                                Margin="0,20"
                                HorizontalAlignment="Left"
                                FontSize="18"
                                Foreground="White"
                                Text="{Binding ThemeVideo.ImdbRating, StringFormat={}{0}/10⭐}" />
                        </WrapPanel>

                        <TextBlock
                            Width="200"
                            Margin="20,10"
                            HorizontalAlignment="Left"
                            FontSize="18"
                            Foreground="White"
                            Text="{Binding ThemeVideo.Genre.Name}" />
                        <StackPanel
                            Width="400"
                            Height="200"
                            HorizontalAlignment="Left"
                            Orientation="Vertical">
                            <TextBlock
                                x:Name="subHeaderText"
                                Margin="20,10"
                                FontSize="20"
                                Foreground="White"
                                Text="{Binding ThemeVideo.Description}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                        <Button
                            Width="200"
                            Height="50"
                            Margin="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderBrush="White"
                            Click="Button_Click"
                            FontSize="18"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Tag="{Binding ThemeVideo}">
                            ▶ Xem ngay
                        </Button>
                        <Button
                            Width="200"
                            Height="50"
                            Margin="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Command="{Binding AddToListCommand}"
                            CommandParameter="{Binding ThemeVideo}"
                            FontSize="18"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
